  "breakpoints": {
    "desktop": {
      "minWidth": "1024px",
      "columns": 4,
      "useStaticLayout": true
    },
    "tablet": {
      "minWidth": "640px",
      "maxWidth": "1023px",
      "columns": 2,
      "useStaticLayout": false,
      "note": "Widgets stack in order of priority"
    },
    "mobile": {
      "maxWidth": "639px",
      "columns": 1,
      "useStaticLayout": false,
      "note": "Single column layout, widgets stack vertically"
    }
  },
  "features": {
    "dragAndDrop": false,
    "resize": false,
    "dynamicLayout": false,
    "persistence": false,
    "adminMode": true,
    "responsiveBreakpoints": true
  },
