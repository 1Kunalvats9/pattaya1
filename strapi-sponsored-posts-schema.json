{
  "kind": "collectionType",
  "collectionName": "sponsored_posts",
  "info": {
    "singularName": "sponsored-post",
    "pluralName": "sponsored-posts",
    "displayName": "Sponsored Post",
    "description": "Sponsored content for widgets and news feeds"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "Content": {
      "type": "text",
      "required": true
    },
    "URL": {
      "type": "string",
      "required": true
    },
    "Sponsor": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "CallToAction": {
      "type": "string",
      "default": "Learn More",
      "maxLength": 50
    },
    "Category": {
      "type": "string",
      "default": "Sponsored"
    },
    "Active": {
      "type": "boolean",
      "default": true
    },
    "Priority": {
      "type": "integer",
      "default": 1,
      "min": 1,
      "max": 10
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "SponsorLogo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "Logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "PublishedTimestamp": {
      "type": "datetime"
    },
    "ExpiryDate": {
      "type": "datetime"
    },
    "TargetWidgets": {
      "type": "json",
      "default": []
    },
    "impressions": {
      "type": "integer",
      "default": 0
    },
    "clicks": {
      "type": "integer",
      "default": 0
    },
    "clickThroughRate": {
      "type": "decimal",
      "default": 0
    },
    "SponsorshipType": {
      "type": "enumeration",
      "enum": ["banner", "content", "mixed"],
      "default": "content"
    },
    "DisplayText": {
      "type": "string",
      "maxLength": 150
    },
    "SponsorWebsite": {
      "type": "string"
    }
  }
}
